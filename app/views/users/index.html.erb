<table>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <% if current_user.has_role?(:admin) %>
        <td><%= link_to "delete", user, method: :delete, data: { confirm: "Are you sure"} %></td>  
        <% end %> 
      </tr>
    <% end %>
    </tbody>
</table>