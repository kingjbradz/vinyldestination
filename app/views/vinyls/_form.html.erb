
<%= simple_form_for(@vinyl) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :artist %>
    <%= f.input :label %>
    <%= f.input :genre, collection: ["House", "Techno", "Disco", "Breaks", "Hip-Hop", "Rock", "Metal", "Jazz", "Alternative", "Funk/Soul", "Other"] %>
    <%= f.input :year, collection: 1950..2020 %>
    <%= f.input :quality, label: "Condition", collection: ["M", "NM", "VG+", "VG", "G+", "G", "F", "P"] %>
    <%= f.input :price, step: 0.01, min: 0.5, hint: "Prices are to be listed in AUD. Numbers only.", as: :decimal %>
    <%= f.input :description  %>
    <%= f.input :availability, label: "Tick if available now." %>
    <%= f.file_field :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
